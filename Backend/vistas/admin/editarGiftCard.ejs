<body id="pagina" data-bs-theme="light" style="transition: background-color 0.5s, color 0.5s;">

<%- include('../partes/header') %>

<h1>Editar Gift Card</h1>



<div class="container mt-4">
  <h2 class="mb-4">Editar GiftCard</h2>

  <form id="formEditarGiftCard" enctype="multipart/form-data" class="modoclarooscuro p-4 shadow rounded bg-light text-dark row g-3" data-token="<%= token %>">
  <input type="hidden" name="giftcardId" value="<%= giftcard.id %>">


    <div class="col-md-6">
      <label for="nombre" class="form-label">Nombre</label>
      <input type="text" id="nombre" name="nombre" class="form-control"
             value="<%= giftcard.nombre %>" required>
    </div>

    <div class="col-md-6">
      <label for="precio" class="form-label">Precio</label>
      <input type="number" id="precio" name="precio" step="0.01" class="form-control"
             value="<%= giftcard.precio %>" required>
    </div>

    <div class="col-md-6">
      <label for="empresa" class="form-label">Empresa</label>
      <input type="text" id="empresa" name="empresa" class="form-control"
             value="<%= giftcard.empresa %>" required>
    </div>

    <div class="col-md-6">
      <label for="consola" class="form-label">Consola</label>
      <input type="text" id="consola" name="consola" class="form-control"
             value="<%= giftcard.consola %>" required>
    </div>

    <div class="col-md-6">
      <label for="stock" class="form-label">Stock</label>
      <input type="number" id="stock" name="stock" class="form-control"
             value="<%= giftcard.stock %>" required>
    </div>

    <div class="col-md-6">
      <label for="fecha_caducidad" class="form-label">Fecha de Caducidad</label>
      <input type="date" id="fecha_caducidad" name="fecha_caducidad" class="form-control"
             value="<%= giftcard.fecha_caducidad.substring(0, 10) %>" required>
    </div>

    <div class="col-md-6">
      <label for="plataformas_disponibles" class="form-label">Plataformas Disponibles</label>
      <input type="text" id="plataformas_disponibles" name="plataformas_disponibles"
             class="form-control" value="<%= giftcard.plataformas_disponibles %>" required>
    </div>

    <div class="col-md-12">
  <label for="imagen" class="form-label">Imagen</label>
  <input type="file" id="imagen" name="imagen" class="form-control">

  <% if (giftcard.imagen) { %>
    <div class="mt-2">
      <p class="form-text text-muted">Imagen actual:</p>
      <img src="<%= giftcard.imagen %>" alt="Imagen de la GiftCard" class="img-thumbnail" style="max-width: 200px;">
    </div>
  <% } else { %>
    <small class="form-text text-muted">Imagen actual: No disponible</small>
  <% } %>

    <div class="col-12 d-flex justify-content-between mt-3">
    <a href="/admin/panelProductos" class="btn btn-secondary">Volver al listado</a>
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
  </div>
</form>

<script src="/js/editarGiftCard.js"></script>
<script src="/js/validarEdicionGiftCard.js"></script>
</body>


<%- include('../partes/footer') %>
